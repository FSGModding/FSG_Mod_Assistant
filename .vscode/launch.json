{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug - Electron Main Process",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
			},
			"args" : ["."],
			"autoAttachChildProcesses": false,
			// "args" : ["--inspect=5858", "."],
			"outputCapture": "std"
		},
		{
			"name": "Debug - CLI Tester",
			"program": "${workspaceFolder}/test/test.js",
			"cwd": "${workspaceFolder}",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		}
	]
}